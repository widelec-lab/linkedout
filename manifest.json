{
  "manifest_version": 3,
  "name": "LinkedIn Decrapper",
  "version": "0.1",
  "description": "Mark irrelevant LinkedIn job offers based on keywords.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Job Filter Settings"
  },
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/jobs/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}